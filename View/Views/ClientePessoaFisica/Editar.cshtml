
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    <form action="Clientepessoafisica/update" method="post">
        <label for="campo-nome">Nome</label>
        <input type="text" name="nome" id="campo-nome"
               value="@ViewBag.ClientePessoaFisica.Nome" />

        <label for="campo-cpf">CPF</label>
        <input type="number" name="cpf" id="campo-cpf"
               value="@ViewBag.ClientePessoaFisica.Cpf" />

        <label for="campo-dataNascimento">Data de Nascimento</label>
        <input type="datetime" name="datanascimento" id="campo-dataNascimento"
               value="@ViewBag.ClientePessoaFisica.dataNascimento" />

        <label for="campo-rg">RG</label>
        <input type="number" name="rg" id="campo-rg"
               value="@ViewBag.ClientePessoaFisica.Rg" />

        <label for="campo-sexo">Sexo</label>
        <select name="sexo">
            @if (ViewBag.ClientePessoaFisica.Sexo == "feminino")
            {
                <option value="feminino" selected>Feminino</option>
            }
            else
            {
                <option value="feminino">Feminino</option>
            }
            @if (ViewBag.ClientePessoaFisica.Sexo == "masculino")
            {
                <option value="masculino" selected>Masculino</option>
            }
            else
            {
                <option value="masculino">Masculino</option>
            }
        </select>
        
        <button type="submit">Salvar</button>

    </form>
</body>
</html>
